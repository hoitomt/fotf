      <li class="nav-item">
        <%= link_to 'Stories', stories_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Illustrations', illustrations_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Reviews', '#', class: 'nav-link' %>
